<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AllergiesFragment">


    <EditText
        android:id="@+id/allergyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="160dp"
        android:ems="10"
        android:hint="@string/allergy"
        android:autofillHints=""
        android:inputType="text" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-160dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:layout_toEndOf="@+id/allergyInput"
        android:onClick="addAllergy"
        android:text="@string/add" />

    <ListView
        android:id="@+id/allergyListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/allergyInput"
        android:layout_marginTop="40dp" />

</RelativeLayout>