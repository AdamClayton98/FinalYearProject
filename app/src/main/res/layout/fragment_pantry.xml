<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PantryFragment">




    <Button
        android:id="@+id/pantryAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:text="@string/string_add"
        android:onClick="toAddToPantry"/>

    <ListView
        android:id="@+id/pantryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pantryAddButton"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/removeFromPantryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantryList"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-260dp"
        android:layout_toStartOf="@+id/pantryAddButton"
        android:text="@string/remove" />
</RelativeLayout>